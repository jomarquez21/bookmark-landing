.tabs
  margin-top 2em
  border-top: 1px solid var(--grayishBlue)

  &-link
    border-bottom: 1px solid var(--grayishBlue)

  &-content
    display: none

    img 
      max-width 100%;
      margin-bottom: 1.5em;

  &-grid
    margin-top: 4em

  input
    display none

  label
    display block
    padding: 1em 0
    position: relative

    &:after
      display: none
      content: ''
      height: 5px
      bottom: 0;
      position absolute;
      width: 45%;
      left: 0
      transform: translateX(65%)
      box-shadow: inset 0 -15px 0 -10px red

  input[id="bookmarking"]:checked
    & ~ ul [for="bookmarking"]:after
      display: block

    & ~ .tabs-grid #tab-bookmarking
      display block

  input[id="searching"]:checked
    & ~ ul [for="searching"]:after
      display: block

    & ~ .tabs-grid #tab-searching
      display block
    
  input[id="sharing"]:checked
    & ~ ul [for="sharing"]:after
      display: block

    & ~ .tabs-grid #tab-sharing
      display block
    