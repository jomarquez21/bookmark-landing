.collapsable
  text-align left
  margin: 2em 0

  &-content
    &[open]
      .collapsable-header
        border: none
      
        &::-webkit-details-marker
          color: var(--softRed)

  &-header
    border-bottom: 1px solid var(--lightGray)
    padding: 1.5em 0
    font-size: .9em
    user-select none

    &:focus
      outline: 0

    &::-webkit-details-marker
      color: var(--softBlue)
      float: right


  
    