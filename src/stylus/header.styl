@import './menu.styl'

.header
  background: white
  position: sticky
  padding: 1.5em 0
  top: 0
  left: 0
  width: 100%
  transition 0.3s background

  &-content
    display: flex
    justify-content: space-between
    align-items: center

  &-logo
    display: inline-flex
    width: 150px
    height: 40px
    background: url('./../images/logo-bookmark.svg') no-repeat center
    background-size: contain