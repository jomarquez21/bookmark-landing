@import './hero.styl'
@import './header.styl'

:root 
  --softBlue: hsl(231, 69%, 60%)
  --softRed: hsl(0, 94%, 66%)
  --grayishBlue: hsl(229, 8%, 60%)
  --veryDarkBlue: hsl(229, 31%, 21%)

body
  background: white
  font-family: 'Rubik', sans-serif
  color: var(--veryDarkBlue)
  margin: 0
  font-size: 18

.u-wrapper
  max-width: 1280px
  margin: auto
  padding: 0 1em

.u-h1
  font-size: 2em
  font-weight 500

.u-p
  color: var(--grayishBlue)
  line-height: 1.8em

.u-button
  background: var(--softBlue)
  color: white
  padding: 1em 1.2em
  font-weight 500
  font-size 1em
  border-radius .5em
  border: none
  cursor: pointer
  box-shadow: 0 5px 10px -5px var(--grayishBlue)

  &.is-gray
    color: var(--veryDarkBlue)
    background: #f7f7f7
