@import './hero.styl'
@import './header.styl'
@import './tabs.styl'
@import './features.styl'
@import './download.styl'
@import './questions.styl'
@import './collapsable.styl'
@import './join.styl'
@import './footer.styl'

:root 
  --softBlue: hsl(231, 69%, 60%)
  --softRed: hsl(0, 94%, 66%)
  --grayishBlue: hsl(229, 8%, 60%)
  --veryDarkBlue: hsl(229, 31%, 21%)
  --lightGray: #e5e5e5

body
  background: white
  font-family: 'Rubik', sans-serif
  color: var(--veryDarkBlue)
  margin: 0
  font-size: 18

ul
  padding: 0
  margin: 0
  list-style: none

.u-wrapper
  max-width: 1280px
  margin: auto
  padding: 0 1em

.u-h1
  font-size: 2em
  font-weight 500

.u-h2
  @extends .u-h1
  font-size: 1.5em

.u-h3
  @extends .u-h1
  font-size: 1.5em

.u-h4
  @extends .u-h1
  font-size: 1.3em

.u-p
  color: var(--grayishBlue)
  line-height: 1.8em
  font-size: .9em

.u-button
  background: var(--softBlue)
  color: white
  padding: 1em 1.2em
  font-weight 500
  font-size 1em
  border-radius .5em
  border: none
  cursor: pointer
  box-shadow: 0 5px 10px -5px var(--grayishBlue)
  --webkit-appearance: none

  &.is-red
    background: var(--softRed)
    color: white;

  &.is-gray
    color: var(--veryDarkBlue)
    background: #f7f7f7

  &.is-fullWidth
    width: 100%

.form
  &-input
    width: 100%
    padding: 1em
    box-sizing: border-box
    margin-bottom: 1.5em
    border-radius: 10px
    border: none
    font-size: 1em
    outline: 0

    &::-webkit-input-placeholder
      color: var(--lightGray)

  u-button
    margin: 0